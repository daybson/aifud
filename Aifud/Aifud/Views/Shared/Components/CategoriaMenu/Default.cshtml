<div class="dropdown">
    <a id="dropdownMenuLink" class="btn btn-link dropdown-toggle" role="button"
       data-bs-toggle="dropdown" aria-expanded="false">
        Categorias
    </a>

    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Lanche" asp-action="List"
                    asp-route-categoria="@categoria.Nome">@categoria.Nome</a>
            </li>
        }
        <li class="dropdown-divider"/>
        <li>
            <a class="dropdown-item" asp-controller="Lanche" asp-action="List"
                asp-route-categoria="">Todos os lanches</a>
        </li>
    </ul>
</div>