@model Lanche

<div class="col-sm-4 col-md-4 col-lg4">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@Model.ImagemUrl" />
        <div class="card-body">
            <h5 class="card-title">@Model.Nome</h5>
            <p class="card-text">@Model.Preco.ToString("c")</p>
            <h6 class="card-footer">@Model.DescricaoCurta</h6>
        </div>
    </div>
</div>