<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aifud</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Aifud.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#e3f2fd;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span><img src="~/images/logo-small.png" /></span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @* <li class="nav-item">
                        <a class="nav-link text-danger" asp-area="" asp-controller="Lanche" asp-action="List">Lanches</a>
                        </li> *@

                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-controller="Contato" asp-action="Index">Contato</a>
                        </li>
                        @await Component.InvokeAsync("CategoriaMenu")
                        &nbsp&nbsp
                        <form class="navbar-form navbar-right" asp-controller="Lanche" asp-action="Search" method="get">
                            <div class="btn-group">
                                <input type="text" class="form-control" placeholder="Procurar" name="searchString" value="@ViewData["searchString"]" />
                                <button class="btn btn-outline-danger">Pesquisar</button>
                            </div>
                        </form>
                        &nbsp&nbsp
                        @await Component.InvokeAsync("CarrinhoCompraResumo")

                        @await Html.PartialAsync("_LoginPartial")

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-area="Admin" asp-controller="Admin" asp-action="Index">Área adm.</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Aifud
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
