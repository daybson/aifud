@model CarrinhoCompraViewModel

<div class="container">
    <div class="row">
        @* <img src="~/images/Full-Cart-icon.png"/> *@

        <div>
            <h1>Carrinho de compras</h1>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th class="text-right">Preço</th>
                    <th class="text-right">Subtotal</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems)
                {
                    <tr>
                        <td class="text-center">
                            <a class="btn btn-outline-danger btn-sm" asp-controller="CarrinhoCompra"
                               asp-action="RemoverItemDoCarrinho"
                               asp-route-lancheId="@item.Lanche.Id">-</a>
                            @item.Quantidade
                            <a class="btn btn-outline-success btn-sm" asp-controller="CarrinhoCompra"
                               asp-action="AdicionarItemNoCarrinho"
                               asp-route-lancheId="@item.Lanche.Id">+</a>
                        </td>
                        <td class="text-left">@item.Lanche.Nome</td>
                        <td class="text-right">@item.Lanche.Preco.ToString("c")</td>

                        <td class="text-right">
                            @((item.Quantidade * item.Lanche.Preco).ToString("c"))
                        </td>

                        <td class="text-center">
                            <a asp-controller="CarrinhoCompra"
                               asp-action="RemoverItemDoCarrinho"
                               asp-route-lancheId="@item.Lanche.Id">
                                <img src="~/images/remove.ico" width="28" height="28" />
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td class="text-right">@Model.CarrinhoCompraTotal.ToString("c")</td>
                </tr>
            </tfoot>
        </table>


        <div class="text-right">
            <div class="btn-group">
                <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar pedido</a>
                &nbsp
                <a class="btn btn-primary" asp-controller="Lanche" asp-action="List">Continuar comprando</a>
            </div>
        </div>

    </div>
</div>