@model IEnumerable<Pedido>

<h2>Pedidos por período</h2>

<nav class="navbar navbar-dark">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                <div class="form-group">
                    <label for="min">Início</label>
                    <input type="date" class="form-control" name="min"
                           value=@ViewData["mindate"]
                </div>
                <div class="form-group">
                    <label for="min">Final</label>
                    <input type="date" class="form-control" name="max"
                           value=@ViewData["maxdate"]
                </div>
            </div>

            <button type="submit" class="btn btn-success">Filtrar</button>

        </form>
    </div>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total de pedidos: @Model.Count()</h3>
        <h3 class="panel-title">Total de lanches: @Model.Sum(s => s.TotalItensPedido)</h3>
        <h3 class="panel-title">Valor total de pedidos: @Model.Sum(s => s.PedidoTotal)</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="succes">
                    <th>@Html.DisplayNameFor(m => m.PedidoId)</th>
                    <th>@Html.DisplayNameFor(m => m.Nome)</th>
                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                    <th>@Html.DisplayNameFor(m => m.Telefone)</th>
                    <th>@Html.DisplayNameFor(m => m.PedidoTotal)</th>
                    <th>@Html.DisplayNameFor(m => m.TotalItensPedido)</th>
                    <th>@Html.DisplayNameFor(m => m.PedidoEntregue)</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@Html.DisplayFor(m => item.PedidoId)</th>
                        <th>@Html.DisplayFor(m => item.Nome)</th>
                        <th>@Html.DisplayFor(m => item.Email)</th>
                        <th>@Html.DisplayFor(m => item.Telefone)</th>
                        <th>@Html.DisplayFor(m => item.PedidoTotal)</th>
                        <th>@Html.DisplayFor(m => item.TotalItensPedido)</th>
                        <th>@Html.DisplayFor(m => item.PedidoEntregue)</th>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>