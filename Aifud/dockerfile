# Use an official ASP.NET Core runtime as a base image
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80

# Use the SDK image to build the application
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["Aifud/Aifud.csproj", "Aifud/"]
RUN dotnet restore "Aifud/Aifud.csproj"
COPY . .
WORKDIR "/src/Aifud"
RUN dotnet build "Aifud.csproj" -c Release -o /app/build

# Publish the application
FROM build AS publish
RUN dotnet publish "Aifud.csproj" -c Release -o /app/publish

# Create the final runtime image
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Aifud.dll"]